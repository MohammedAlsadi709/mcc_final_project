<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="@color/btnShapeStart" android:endColor="@color/btnShapeEnd"/>
            <corners android:radius="8dp"/>
            <stroke android:width="0.3dp" android:color="@color/btnShapeStrock"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape >
            <gradient android:startColor="@color/btnPressedShapeStart" android:endColor="@color/btnPressedShapeEnd"/>
            <corners android:radius="8dp"/>
            <stroke android:width="0.3dp" android:color="@color/btnShapeStrock"/>
        </shape>
    </item>
</selector>